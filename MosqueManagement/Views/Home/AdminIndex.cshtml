                                <a asp-controller="Business" asp-action="AdminIndex" type="button" class="btn btn-sm btn-outline-secondary">Lihat</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <img class="card-img-top" src="https://www.johanrosli.com/wp-content/uploads/2019/03/41770545_1816219261810728_4877095657082454016_n.jpg" max-width="100%" height="225" alt="Card image caption">
                    <div class="card-body">
                        <p class="card-text"><b>Sumber Manusia</b></p>
                        <p class="card-text">Kenali pihak pengurusan masjid!</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="HumanResource" asp-action="AdminIndex" type="button" class="btn btn-sm btn-outline-secondary">Lihat</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
