@{
    ViewData["Title"] = "Home Page";
    Layout = "../Shared/_LayoutAdmin.cshtml";
}

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Selamat Datang Ke Sistem Pengurusan Masjid</h1>
            <p class="lead text-body-secondary">Masjid Ar-Rahman Taman Putri</p>
            <div style="border:black; border-width:2px; border-style:solid;">
                <p><b>Tarikh Hari Ini</b></p>
                <script>document.write(new Date().toLocaleDateString());</script>
            </div>
        </div>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <div class="col">
                <div class="card shadow-sm">
                    <img class="card-img-top" src="https://upload.wikimedia.org/wikipedia/commons/5/59/Ar-Rahman_Mosque_%28Johor%29.jpg" max-width="100%" height="225" alt="Card image caption">
                    <div class="card-body">
                        <p class="card-text"><b>Perkhidmatan</b></p>
                        <p class="card-text">Sila pilih perkhidmatan yang anda berminat!</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Document" asp-action="AdminIndex" type="button" class="btn btn-sm btn-outline-secondary">Lihat</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <img class="card-img-top" src="https://ilhami.my/wp-content/uploads/2021/06/closeup-working-table-workplace-office-1-scaled.jpg" max-width="100%" height="225" alt="Card image caption">
                    <div class="card-body">
                        <p class="card-text"><b>Permohonan</b></p>
                        <p class="card-text">Urus permohonan servis tawaran Masjid!</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Document" asp-action="Approve" type="button" class="btn btn-sm btn-outline-secondary">Lihat</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <img class="card-img-top" src="https://ilhami.my/wp-content/uploads/2021/06/closeup-working-table-workplace-office-1-scaled.jpg" max-width="100%" height="225" alt="Card image caption">
                    <div class="card-body">
                        <p class="card-text"><b>Sejarah Permohonan</b></p>
                        <p class="card-text">Lihat sejarah permohonan servis tawaran Masjid!</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Document" asp-action="AdminHistory" type="button" class="btn btn-sm btn-outline-secondary">Lihat</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <img class="card-img-top" src="https://www.enago.com/academy/wp-content/uploads/2022/05/statistics-in-research_global-750x340.jpg" max-width="100%" height="225" alt="Card image caption">
                    <div class="card-body">
                        <p class="card-text"><b>Laporan Perkhidmatan</b></p>
                        <p class="card-text">Lihat Perkembangan Perkhidmatan Masjid!</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Document" asp-action="Statistic" type="button" class="btn btn-sm btn-outline-secondary">Lihat</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <img class="card-img-top" src="https://3.bp.blogspot.com/-p5hOIEXp_hw/U3AmORnsixI/AAAAAAAAN2U/hP3CMUirp-U/s1600/Masjid_02.jpg" max-width="100%" height="225" alt="Card image caption">
                    <div class="card-body">
                        <p class="card-text"><b>Iklan Perniagaan</b></p>
                        <p class="card-text">Luaskan capaian perniagaan anda!</p>
