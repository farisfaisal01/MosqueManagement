@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Selamat Datang Ke Sistem Pengurusan Masjid</h1>
            <p class="lead text-body-secondary">Masjid Ar-Rahman Taman Putri</p>
            <div  style="border:black; border-width:2px; border-style:solid;">
                <p><b>Tarikh Hari Ini</b></p>
                <script>document.write(new Date().toLocaleDateString());</script>
            </div>
        </div>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <div class="col">
                <div class="card shadow-sm">
                    <img class="card-img-top" src="https://upload.wikimedia.org/wikipedia/commons/5/59/Ar-Rahman_Mosque_%28Johor%29.jpg" max-width="100%" height="225" alt="Card image caption">
                    <div class="card-body">
                        <p class="card-text"><b>Perkhidmatan</b></p>
                        <p class="card-text">Sila pilih perkhidmatan yang anda berminat!</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Document" asp-action="Index" type="button" class="btn btn-sm btn-outline-secondary">Lihat</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <img class="card-img-top" src="https://scontent.fkul21-1.fna.fbcdn.net/v/t45.5328-4/24296169_1540857839344122_7746754940390866944_n.jpg?_nc_cat=107&ccb=1-7&_nc_sid=c48759&_nc_ohc=fxUFaYlCiZwAX-l37qk&_nc_ht=scontent.fkul21-1.fna&oh=00_AfBbOoZLVIrxFi_hdDJcbiYXVJKyV4k-Jcfnb00D_tDY-w&oe=647DFB95" max-width="100%" height="225" alt="Card image caption">
                    <div class="card-body">
                        <p class="card-text"><b>Tabung Masjid</b></p>
                        <p class="card-text">Infaq harta anda hari ini!</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Payment" asp-action="Index" type="button" class="btn btn-sm btn-outline-secondary">Lihat</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <img class="card-img-top" src="https://3.bp.blogspot.com/-p5hOIEXp_hw/U3AmORnsixI/AAAAAAAAN2U/hP3CMUirp-U/s1600/Masjid_02.jpg" max-width="100%" height="225" alt="Card image caption">
                    <div class="card-body">
                        <p class="card-text"><b>Iklan Perniagaan</b></p>
                        <p class="card-text">Luaskan capaian perniagaan anda!</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Business" asp-action="Index" type="button" class="btn btn-sm btn-outline-secondary">Lihat</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <img class="card-img-top" src="https://www.johanrosli.com/wp-content/uploads/2019/03/41770545_1816219261810728_4877095657082454016_n.jpg" max-width="100%" height="225" alt="Card image caption">
                    <div class="card-body">
                        <p class="card-text"><b>Sumber Manusia</b></p>
                        <p class="card-text">Kenali pihak pengurusan masjid!</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="HumanResource" asp-action="Index" type="button" class="btn btn-sm btn-outline-secondary">Lihat</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>