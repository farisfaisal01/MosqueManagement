@model Rental
@{
    ViewData["Title"] = "Mohon Servis";
    Service service = ViewData["Service"] as Service;
}

<form method="post" action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="eventName">Nama Program</label>
        <input asp-for="eventName" type="text" id="eventName" name="eventName" class="form-control" placeholder="Isi nama program">
        <span asp-validation-for="eventName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="eventDescription">Penerangan Program</label>
        <input asp-for="eventDescription" type="text" id="eventDescription" name="eventDescription" class="form-control" placeholder="Isi penerangan program">
        <span asp-validation-for="eventDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="startDate">Tarikh Mula</label>
        <input asp-for="startDate" type="date" id="startDate" min="@DateTime.Now.AddDays(2).ToString("yyyy-MM-dd")" name="startDate" class="form-control" placeholder="Isi tarikh mula program">
        <span asp-validation-for="startDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="endDate">Tarikh Tamat</label>
        <input asp-for="endDate" type="date" id="endDate" min="@DateTime.Now.AddDays(2).ToString("yyyy-MM-dd")" name="endDate" class="form-control" placeholder="Isi tarikh tamat program">
        <span asp-validation-for="endDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="remarks">Nota Kepada Pengurusan</label>
        <input asp-for="remarks" type="text" id="remarks" name="remarks" class="form-control" placeholder="Isi nota kepada pengurusan">
        <span asp-validation-for="remarks" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="attachment">Kepilan</label>
        <input asp-for="attachment" type="text" id="attachment" name="attachment" class="form-control" placeholder="Isi kepilan">
        <span asp-validation-for="attachment" class="text-danger"></span>
    </div>
    <input asp-for="serviceId" type="hidden" id="serviceId" name="serviceId" value="@service.serviceId" />
    <br />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmModal">Mohon</button>

    <!-- Modal for confirmation -->
    <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmModalLabel">Pengesahan Permohonan</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Batal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Anda akan memohon servis. Adakah anda pasti dengan segala perincian?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Batal</button>
                    <button type="submit" class="btn btn-primary">Mohon</button>
                </div>
            </div>
        </div>
    </div>
</form>
