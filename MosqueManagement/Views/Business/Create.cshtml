@model Market
@{
    ViewData["Title"] = "Tambah Perniagaan";
}

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="marketName">Nama Perniagaan</label>
        <input asp-for="marketName" class="form-control" placeholder="Isi nama perniagaan" required autofocus>
        <span asp-validation-for="marketName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="marketDescription">Penerangan Perniagaan</label>
        <input asp-for="marketDescription" class="form-control" placeholder="Isi penerangan perniagaan" required autofocus>
        <span asp-validation-for="marketDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="marketContact">Nombor Telefon Perniagaan</label>
        <input asp-for="marketContact" class="form-control" placeholder="Isi nombor telefon perniagaan" required autofocus>
        <span asp-validation-for="marketContact" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="marketAttachment" class="control-label">Gambar Perniagaan</label>
        <div class="custom-file">
            <input asp-for="marketAttachment" type="file" class="custom-file-input" accept=".png, .jpg, .jpeg" id="marketAttachment" onchange="document.getElementById('MarketImage').src = window.URL.createObjectURL(this.files[0]" required autofocus>
            <label class="custom-file-label" for="marketAttachment"></label>
        </div>
        <span asp-validation-for="marketAttachment" class="text-danger"></span>
    </div>
   <br />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmModal">Tambah</button>


    <!-- Modal for confirmation -->
    <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmModalLabel">Sahkan Pembayaran</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Anda akan melakukan penambahan. Adakah anda pasti dengan segala perincian?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Batal</button>
                    <button type="submit" class="btn btn-primary">Tambah</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">
    $(".custom-file-input").on("change", function(){
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    })    
</script>