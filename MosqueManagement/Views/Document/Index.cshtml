@{
    ViewData["Title"] = "Perkhidmatan";
}

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Perkhidmatan</h1>
            <p class="lead text-body-secondary">Sila pilih perkhidmatan yang anda berminat!</p>
        </div>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach(var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@item.serviceAttachment" max-width="100%" height="225" alt="Card image caption">
                        <div class="card-body">
                            <p class="card-text"><b>@item.serviceName</b></p>
                            <p class="card-text">@item.serviceDescription</p>
                            <p class="card-text">RM @item.servicePrice</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Document" asp-action="Detail" asp-route-id="@item.serviceId" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                </div>
                                <small class="text-body-secondary">@item.serviceCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>